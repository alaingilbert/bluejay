html, body
   -webkit-font-smoothing antialiased
   font-family 'Lucida Grande', Helvetica, Arial, Verdana, sans-serif
   font-size 14px
   line-height 21px

table
   border 1px solid black

a
   color #0000ff


h1
   font-weight bold
   font-size 22px
   margin 8px 0 25px 0

img
   border 0

.hidden
   display none

#loginfrm input
   display block

#registerfrm input 
   display block


#login_form h2 
   font-weight bold

#login_form 
   border 2px solid black
   background-color rgba(0, 0, 0, 0.5)
   position absolute
   padding 15px
   color white
   z-index 10

#login_form .left 
   float left
   margin-right 15px

#login_form .right 
   float left
   border-left 1px solid #eee
   padding-left 15px


#loginfrm label.error, #loginfrm input.submit 
   color red
   display block
   margin 0
   padding 0

#registerfrm label.error, #registerfrm input.submit 
   color red
   display block
   margin 0
   padding 0


#logout img 
   float right

#logout .username 
   margin-top 5px
   margin-right 7px
   float right

#logout 
   display none



#searchform 
   float right
   padding-top 2px


#menu 
   padding 3px 0 0 0
   height 27px
   border-bottom 1px solid gray
   background -webkit-gradient(linear, 0% 0%, 0% 100%, from(#eee), to(#eee), color-stop(.6,#ddd))
   background -moz-linear-gradient(top, #eee 0%, #ddd 100%)

#menu ul li 
   display block
   float left
   padding 3px 15px
   border-right 0px solid #666
   margin-left 0

#menu ul lilast-child 
   border 0

#menu .center, #menu2 .center 
   margin auto
   width 1000px

#menu div.right 
   float right


#menu2 
   margin-bottom 25px
   background-color #ddd
   border-bottom 1px solid gray
   height 28px

#menu2 ul li 
   display block
   float left
   margin-left 0

#menu2 ul li.selected 
   background-color white
   -moz-border-radius-topleft 13px
   border-top-left-radius 13px
   -moz-border-radius-topright 13px
   border-top-right-radius 13px
   position relative
   top 1px
   border-top 1px solid gray
   border-left 1px solid gray
   border-right 1px solid gray

#menu2 ul li ahover 
   background-color #eee

#menu2 ul li.selected ahover 
   background-color transparent

#menu2 ul li.selected a 
   color #555

#menu2 ul li a 
   display block
   height 24px
   width 100px
   padding-top 3px
   text-align center
   text-decoration none
   font-weight bold
   color #777



#popup 
   background-color rgba(0, 0, 0, 0.5)
   position fixed
   width 100%
   height 100%
   top 0
   left 0
   display none
   z-index 10

#popup .close 
   cursor pointer
   margin-right -10px

#popup .content h1 
   font-size 17px
   margin 20px 0 5px 0

#popup #txtusername 
   color rgb(187, 187, 187)

#popup .content 
   position fixed
   top 50%
   left 50%
   margin-top -200px
   margin-left -200px
   height 300px
   width 400px
   padding 15px 25px 25px 25px
   background-color white
   border 1px solid gray
   -moz-border-radius 13px
   border-radius 13px
   z-index 11

#share 
   width 80px
   display block
   position fixed
   top 100px
   right 0px
   background-color #bbb
   padding-top 10px
   padding-bottom 10px
   padding-left 10px
   -moz-border-radius-topleft 13px
   border-top-left-radius 13px
   -moz-border-radius-bottomleft 13px
   border-bottom-left-radius 13px
   z-index 2
   border-left 1px solid gray
   border-top 1px solid gray
   border-bottom 1px solid gray



.clear
   clear both 

.left
   float left 

.right
   float right 




/* http://webdesignerwall.com/tutorials/css3-gradient-buttons */
.greenbtn
   color #e8f0de
   border solid 1px #538312
   background #64991e
   background -webkit-gradient(linear, left top, left bottom, from(#7db72f), to(#4e7d0e))
   background -moz-linear-gradient(top,  #7db72f,  #4e7d0e)

.greenbtn:hover 
   background #538018
   background -webkit-gradient(linear, left top, left bottom, from(#6b9d28), to(#436b0c))
   background -moz-linear-gradient(top,  #6b9d28,  #436b0c)

.greenbtn:active 
   color #a9c08c
   background -webkit-gradient(linear, left top, left bottom, from(#4e7d0e), to(#7db72f))
   background -moz-linear-gradient(top,  #4e7d0e,  #7db72f)

/* red */
.redbtn 
   color #faddde
   border solid 1px #980c10
   background #d81b21
   background -webkit-gradient(linear, left top, left bottom, from(#ed1c24), to(#aa1317))
   background -moz-linear-gradient(top,  #ed1c24,  #aa1317)

.redbtn:hover 
   background #b61318
   background -webkit-gradient(linear, left top, left bottom, from(#c9151b), to(#a11115))
   background -moz-linear-gradient(top,  #c9151b,  #a11115)

.redbtn:active 
   color #de898c
   background -webkit-gradient(linear, left top, left bottom, from(#aa1317), to(#ed1c24))
   background -moz-linear-gradient(top,  #aa1317,  #ed1c24)

/* blue */
.blue 
   color #d9eef7
   border solid 1px #0076a3
   background #0095cd
   background -webkit-gradient(linear, left top, left bottom, from(#00adee), to(#0078a5))
   background -moz-linear-gradient(top,  #00adee,  #0078a5)

.blue:hover 
   background #007ead
   background -webkit-gradient(linear, left top, left bottom, from(#0095cc), to(#00678e))
   background -moz-linear-gradient(top,  #0095cc,  #00678e)

.blue:active 
   color #80bed6
   background -webkit-gradient(linear, left top, left bottom, from(#0078a5), to(#00adee))
   background -moz-linear-gradient(top,  #0078a5,  #00adee)

.button
   display inline-block
   zoom 1 /* zoom and *display = ie7 hack for display:inline-block */
   *display inline
   vertical-align baseline
   margin 0 2px
   outline none
   cursor pointer
   text-align center
   text-decoration none
   font 14px/100% Arial, Helvetica, sans-serif
   padding .5em 2em .55em
   text-shadow 0 1px 1px rgba(0,0,0,.3)
   -webkit-border-radius .5em 
   -moz-border-radius .5em
   border-radius .5em
   -webkit-box-shadow 0 1px 2px rgba(0,0,0,.2)
   -moz-box-shadow 0 1px 2px rgba(0,0,0,.2)
   box-shadow 0 1px 2px rgba(0,0,0,.2)

.button:hover
   text-decoration none

.button:active
   position relative
   top 1px

 
.bigrounded
   -webkit-border-radius 2em
   -moz-border-radius 2em
   border-radius 2em

.medium
   font-size 12px
   padding .4em 1.5em .42em

.small
   font-size 11px
   padding .2em 1em .275em
