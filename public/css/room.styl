#songs
   position absolute
   top 0
   bottom 0
   left 0
   overflow hidden
   padding 10px 15px 10px 10px
   background-color #ddd
   border-right 1px solid #aaa
   z-index 2

#songs .song
   opacity 0.8

#songs .song:hover
   opacity 1

#song
   float left

#stats
   position absolute
   top 46px
   left 700px

canvas
   border 1px solid gray

#votesup
   float left
   height 21px
   width 40px
   color green
   font-weight bold
   font-size 20px
#votesdown
   float left
   height 21px
   width 40px
   color red
   font-weight bold
   font-size 20px

#song
   width 500px
   height 150px
   overflow hidden
#song .song
   height 150px
#song .song .img
   float left
   margin-right 15px
#song .song .img img
   width 150px
   height 150px
#song .song .infos
   float left
   overflow hidden
   width 320px
   white-space:nowrap;
#song .song .infos label
   float left
   width 110px
   font-weight bold
   display block

#head
   position absolute
   top 0
   left 126px
   right 0
   height 30px
   background-color #ddd
   border-bottom 1px solid #aaa

#head ul li
   float left
   margin: 4px 30px;

#head ul li a
   font-size 20px
   font-family: Lucida Grande;
   background-color: #666;
   -webkit-background-clip: text;
   -moz-background-clip: text;
   background-clip: text;
   color: transparent;
   text-shadow: rgba(255,255,255,0.5) 0px 3px 3px;

#head ul li a:hover
   background-color: #333;

#page
   position absolute
   top 31px
   left 126px
   right 0
   bottom 80px
   padding 20px

#foot
   position absolute
   bottom 0
   left 0
   right 0
   height 80px

#foot p
   text-align center
   margin-top 15px

#ads
   width 300px
   height 250px
   border 1px solid black


.scrollbar
   background-color rgba(0, 0, 0, 0.398438)
   display none
   width 5px
   position absolute
   top 0px
   right 2px
   border 1px solid rgba(85, 85, 85, 0.597656)
   border-bottom-left-radius 7px
   border-bottom-right-radius 7px
   border-top-left-radius 7px
   border-top-right-radius 7px
